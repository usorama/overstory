{
	"hooks": {
		"SessionStart": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "overstory prime --agent {{AGENT_NAME}}"
					}
				]
			}
		],
		"UserPromptSubmit": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "overstory mail check --inject --agent {{AGENT_NAME}}"
					}
				]
			}
		],
		"PreToolUse": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "read -r INPUT; echo \"$INPUT\" | overstory log tool-start --agent {{AGENT_NAME}} --stdin"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "read -r INPUT; echo \"$INPUT\" | overstory log tool-end --agent {{AGENT_NAME}} --stdin"
					}
				]
			}
		],
		"Stop": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "read -r INPUT; echo \"$INPUT\" | overstory log session-end --agent {{AGENT_NAME}} --stdin"
					}
				]
			}
		],
		"PreCompact": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "overstory prime --agent {{AGENT_NAME}} --compact"
					}
				]
			}
		]
	}
}
